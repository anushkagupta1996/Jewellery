<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/bangels1"
            android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:paddingHorizontal="20dp"
                android:src="@drawable/ban2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangals"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/rings1"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingHorizontal="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ring1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rings"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        
    </android.support.v7.widget.CardView>
    
        <android.support.v7.widget.CardView
            android:id="@+id/neckles1"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingHorizontal="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/neck8" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neckles"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/nosepins1"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingHorizontal="20dp"
                android:scaleType="center"
                android:src="@drawable/nose5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nosepins"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mangalsutra1"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:paddingHorizontal="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/m4" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mangalsutra"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bracelets1"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:paddingHorizontal="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bracelet4" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bracelets"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/earings1"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ear4"
                    android:paddingHorizontal="20dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earings"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/chains"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/chain1"
                    android:paddingHorizontal="20dp"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chains"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>